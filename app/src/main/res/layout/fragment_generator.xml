<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1E1E2C">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generator_title"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/length_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/length_default"
        android:textColor="@android:color/white" />

    <SeekBar
        android:id="@+id/length_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="32"
        android:progress="14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/lower_case_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/lower_case_label"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/upper_case_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/upper_case_label"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/numbers_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/numbers_label"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/symbols_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/symbols_label"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/generated_password_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#2C2C3A"
        android:padding="12dp"
        android:text="@string/generated_password_default"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/generate_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#8A2BE2"
            android:text="@string/generate_button"
            android:textColor="@android:color/white"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/copy_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:backgroundTint="#8A2BE2"
            android:text="@string/copy_button"
            android:textColor="@android:color/white"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

</LinearLayout>
